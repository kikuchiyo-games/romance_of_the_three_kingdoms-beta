<script type='template/javascript' id='military-details-template'>
  <div class='media col-md-12 animated report-view form-group'>
    <label class='form-label pull-left'>{{details}}</label>
    <div class='col-xs-12'>
      <input id='military_value' type='text' class='form-control' placeholder='...'/>
    </div>
  </div>
</script>

<script type='template/javascript' id='military-index-template'>
  <h5>military</h5>

  <div class='col-sm-12 clearfix'>
    <h5>troop quantity</h5>
    <button class='btn general_assignment_form' data-action='conscript' data-details="conscript how many troops?" type='button'>conscript</button>
    <button class='btn general_assignment_form' data-action='draft'     data-details="draft how many troops?" type='button'>draft</button>
    <button class='btn general_assignment_form' data-action='release'   data-details="release how many troops?" type='button'>release</button>
  </div>

  <div class='col-sm-12 clearfix'>
    <h5>troop quality</h5>
    <button class='btn general_assignment_form' data-action='train' type='button'>train</button>
    <button class='btn general_assignment_form' data-action='equip' data-details="buy how many arms for the troops?" type='button'>equip</button>
  </div>

  <div class='col-sm-12 clearfix'>
    <h5>troop deployment</h5>
    <button class='btn disabled' type='button'>invade</button>
    <button class='btn disabled' type='button'>reinforce</button>
  </div>

</script>

<script type='template/javascript' id='military-container-template'>
  <div class='col-md-12'>
    <div id='generals_list' class='well'>
    </div>

    <div id='military_details'>
    </div>

    <button class='btn btn-primary implement-{{action}}' type='button'>{{button}}!</button>
  </div>
</script>

<script type='template/javascript' id='military-training-general-template'>
